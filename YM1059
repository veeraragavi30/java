import java.util.Scanner;

public class DairyMilkReward {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        
        int n = sc.nextInt();  
        int sumEven = 0;
        
        for (int i = 0; i < n; i++) {
            int num = sc.nextInt();
            if (num % 2 == 0) {
                sumEven += num;
            }
        }
        sc.close();
        
        if (sumEven > 0) {
            System.out.println("Pappu, the Diary Milk is yours! The sum of even numbers in the array is " + sumEven + ".");
        } else {
            System.out.println("Sorry Pappu, no Diary Milk this time. There are no even numbers in the array.");
        }
    }
}
